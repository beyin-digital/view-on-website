<html lang='en'>

  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width, initial-scale=' />
    <title>{{title}}</title>
  </head>

  <body style='margin:0;font-family:arial'>
    <table style='border:0;width:100%'>
      <tr style='background:#eeeeee'>
        <td
          style='padding:20px;color:#808080;text-align:center;font-size:40px;font-weight:600'
        >
          {{app_name}}
        </td>
      </tr>
      <tr>
        <td style='padding:20px;color:#808080;font-size:16px;font-weight:100'>
          {{helloAnd}}
          {{thank_you_for_your_payment}}
          {{for_the_amount_of}}
          {{amount}}
          {{for_as_a_word}}
          #
          {{keyword}}
          on
          {{app_name}}.<br />
          {{your_payment_has_been_processed_and_you_can_find_your_receipt_here}}
          <a href='{{receiptUrl}}'>{{receipt}}</a>
          <br />
          {{your_subscription_will_be_renewed_on}}
          {{renewalDate}}
          {{for_the_amount_of}}
          {{renewalPrice}}
        </td>
      </tr>
    </table>
  </body>
</html>